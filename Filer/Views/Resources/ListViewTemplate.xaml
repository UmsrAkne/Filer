<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors">

    <SolidColorBrush x:Key="fgColorBrush" Color="Gainsboro" />

    <DataTemplate x:Key="ListViewItemTemplate">

        <ContentControl Height="{Binding ElementName=Window, Path=DataContext.ListViewItemLineHeight}">

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick" />
            </i:Interaction.Triggers>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock Foreground="{StaticResource fgColorBrush}" Text="{Binding Name}" />

                <TextBlock
                    Grid.Column="1"
                    Foreground="{StaticResource fgColorBrush}"
                    Text="{Binding Extension}" />

            </Grid>

        </ContentControl>

    </DataTemplate>

    <Style x:Key="ListViewItemContainerStyle" TargetType="ListViewItem" />

</ResourceDictionary>