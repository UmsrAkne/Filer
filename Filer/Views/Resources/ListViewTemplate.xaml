<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors">

    <SolidColorBrush x:Key="fgColorBrush" Color="Gainsboro" />
    <SolidColorBrush x:Key="bgColorBrush" Color="#444444" />

    <DataTemplate x:Key="ListViewItemTemplate">

        <ContentControl Height="{Binding ElementName=Window, Path=DataContext.ListViewItemLineHeight}">

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick" />
            </i:Interaction.Triggers>

            <Border>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        VerticalAlignment="Center"
                        Foreground="{StaticResource fgColorBrush}"
                        Text="{Binding Name}" />

                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Foreground="{StaticResource fgColorBrush}"
                        Text="{Binding Extension}" />

                </Grid>

            </Border>

        </ContentControl>

    </DataTemplate>

    <Style x:Key="ListViewItemContainerStyle" TargetType="ListViewItem">
        <Setter Property="Margin" Value="0" />
        <Setter Property="Padding" Value="3" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="BorderBrush" Value="Black" />

        <Style.Triggers>
            <Trigger Property="ListView.AlternationIndex" Value="1">
                <Setter Property="Background" Value="{StaticResource bgColorBrush}" />

            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>