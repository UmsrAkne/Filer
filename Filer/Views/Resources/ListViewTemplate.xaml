<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Filer.Models.Converters"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:models="clr-namespace:Filer.Models">

    <SolidColorBrush x:Key="fgColorBrush" Color="Gainsboro" />
    <SolidColorBrush x:Key="bgColorBrush" Color="#444444" />

    <DataTemplate x:Key="ListViewItemTemplate" DataType="{x:Type models:ExtendFileInfo}">

        <DataTemplate.Resources>
            <converters:NumberFormatConverter x:Key="numberFormatConverter" />
        </DataTemplate.Resources>

        <ContentControl Height="{Binding ElementName=listView, Path=DataContext.ListViewItemLineHeight}">

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick" />
            </i:Interaction.Triggers>

            <Border Padding="3,0" BorderThickness="3,0,0,0">

                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsSelected}" Value="True" />
                                    <Condition Binding="{Binding Marked}" Value="True" />
                                </MultiDataTrigger.Conditions>

                                <Setter Property="Background" Value="DarkViolet" />
                            </MultiDataTrigger>

                            <DataTrigger Binding="{Binding IsSelectionModeSelected}" Value="True">
                                <Setter Property="BorderBrush" Value="Violet" />
                            </DataTrigger>

                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="30" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        Margin="2,0"
                        VerticalAlignment="Center"
                        Foreground="{StaticResource fgColorBrush}"
                        Text="{Binding Index, Converter={StaticResource numberFormatConverter}}" />

                    <TextBlock
                        Grid.Column="1"
                        Margin="8,0"
                        VerticalAlignment="Center"
                        Foreground="{StaticResource fgColorBrush}"
                        Text="{Binding Name}" />

                    <TextBlock
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Text="{Binding Extension}">

                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{StaticResource fgColorBrush}" />

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Extension}" Value="DIR">
                                        <Setter Property="Foreground" Value="Yellow" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                </Grid>

            </Border>

        </ContentControl>

    </DataTemplate>

    <Style x:Key="ListViewItemContainerStyle" TargetType="ListViewItem">
        <Setter Property="Margin" Value="0" />
        <Setter Property="Padding" Value="3" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="IsSelected" Value="{Binding IsSelected}" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListViewItem}">
                    <Border Background="{TemplateBinding Background}">
                        <GridViewRowPresenter Columns="{TemplateBinding GridView.ColumnCollection}" Content="{TemplateBinding Content}" />
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="ListView.AlternationIndex" Value="1">
                            <Setter Property="Background" Value="{StaticResource bgColorBrush}" />
                        </Trigger>

                        <Trigger Property="ListView.AlternationIndex" Value="0">
                            <Setter Property="Background" Value="{StaticResource BgColorBrush}" />
                        </Trigger>

                        <DataTrigger Binding="{Binding Marked}" Value="True">
                            <Setter Property="Background" Value="Purple" />
                        </DataTrigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>